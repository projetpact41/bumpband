

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/container"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.bump.ColorMenu"
tools:ignore="MergeRootFrame"
android:background="@drawable/fondnoir">

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarRed"
        android:layout_x="70dp"
        android:layout_y="100dp"
        android:max="255"
        android:background="@drawable/rouge"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/seekBarGreen"
        android:layout_alignStart="@+id/seekBarGreen" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarGreen"
        android:layout_x="70dp"
        android:layout_y="200dp"
        android:max="255"
        android:background="@drawable/vert"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/seekBarBlue"
        android:layout_alignStart="@+id/seekBarBlue" />

    <SeekBar
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarBlue"
        android:layout_x="70dp"
        android:layout_y="300dp"
        android:max="255"
        android:background="@drawable/bleu"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
