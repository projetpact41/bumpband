package admin;

import com.example.bump.actions.BumpFriend;
import com.example.bump.actions.Color;

import java.util.ArrayList;
import java.util.Hashtable;
import java.util.Random;

/**
 * Created by Arturo on 07/04/2014.
 */
public class FlashMob {
    private ArrayList<Color> listecouleur;
    private ArrayList<BumpFriend> participants;
    private int nombre;

    public FlashMob(ArrayList<Color> listecouleur, ArrayList<BumpFriend> participants, int nombre){
        this.listecouleur = listecouleur ;
        this.participants = participants ;
        this.nombre = nombre ;
    }

    public void Start () {
        Random rand = new Random();
        Integer i = 0;
        int l = participants.size();
        int n = l/nombre;
        for (int k=0;(k<n)&&(k<listecouleur.size());i++){
            for(int j=0;j<nombre;j++){
                do {i=rand.nextInt(l);} while (participants.get(i).getGroupe()!=Color.Blanc);
                participants.get(i).setGroupe(listecouleur.get(k));//Ã  transmettre
                }
        }
    }
}
